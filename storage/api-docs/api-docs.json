    "servers": [
        {
            "url": "http://localhost/api",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/books": {
            "get": {
                "tags": [
                    "Books"
                ],
                "summary": "Get list of books",
                "description": "Returns list of books",
                "operationId": "getBooksList",
                "parameters": [
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of records on the page in paginated listing (min: 5, max: 50)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 20,
                            "maximum": 50,
                            "minimum": 5
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Number of the page in paginated listing",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BookCollection"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Books"
                ],
                "summary": "Store new book",
                "description": "Returns book data",
                "operationId": "storeBook",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/StoreBookRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BookResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                }
            }
        },
        "/books/{id}": {
            "get": {
                "tags": [
                    "Books"
                ],
                "summary": "Get book data",
                "description": "Returns book data",
                "operationId": "getBookById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Book id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BookResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "Resource Not Found"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Books"
                ],
                "summary": "Delete existing book",
                "description": "Deletes a books and returns no content",
                "operationId": "deleteBook",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Book id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "404": {
                        "description": "Resource Not Found"
                    }
                }
            },
            "patch": {
                "tags": [
                    "Books"
                ],
                "summary": "Update existing book",
                "description": "Returns updated book data",
                "operationId": "updateBook",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Book id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateBookRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BookResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "404": {
                        "description": "Resource Not Found"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Genre": {
                "title": "Genre",
                "description": "Genre of book",
                "type": "string",
                "enum": [
                    "Fantasy",
                    "Science fiction",
                    "Mystery",
                    "Horror",
                    "Romance novel",
                    "Thriller",
                    "Autobiography",
                    "Adventure",
                    "History",
                    "Biography",
                    "Drama",
                    "Humor"
                ]
            },
            "StoreBookRequest": {
                "title": "Store Book request",
                "description": "Store Book request body",
                "required": [
                    "title",
                    "publisher",
                    "author",
                    "genre",
                    "publication_date",
                    "words_number",
                    "price"
                ],
                "properties": {
                    "title": {
                        "title": "Title",
                        "description": "Title of the book",
                        "type": "string",
                        "example": "Laborum voluptatem officiis est et"
                    },
                    "publisher": {
                        "title": "Publisher",
                        "description": "Publisher of the book",
                        "type": "string",
                        "example": "Zieme, Hauck and McClure"
                    },
                    "author": {
                        "title": "Author",
                        "description": "Author of the book",
                        "type": "string",
                        "example": "Allen Brown"
                    },
                    "genre": {
                        "title": "Genre",
                        "description": "Genre of the book",
                        "example": "Science fiction"
                    },
                    "publication_date": {
                        "title": "Publication date",
                        "description": "Publication date of the book",
                        "type": "string",
                        "format": "date",
                        "example": "2024-04-20"
                    },
                    "words_number": {
                        "title": "Words number",
                        "description": "Number of words in the book",
                        "type": "integer",
                        "format": "int32",
                        "example": 100000
                    },
                    "price": {
                        "title": "Price",
                        "description": "Price of the book",
                        "type": "number",
                        "format": "float",
                        "example": 9.99
                    }
                },
                "type": "object"
            },
            "UpdateBookRequest": {
                "title": "Update Book request",
                "description": "Update Book request body",
                "properties": {
                    "title": {
                        "title": "Title",
                        "description": "Title of the book",
                        "type": "string",
                        "example": "Laborum voluptatem officiis est et"
                    },
                    "publisher": {
                        "title": "Publisher",
                        "description": "Publisher of the book",
                        "type": "string",
                        "example": "Zieme, Hauck and McClure"
                    },
                    "author": {
                        "title": "Author",
                        "description": "Author of the book",
                        "type": "string",
                        "example": "Allen Brown"
                    },
                    "genre": {
                        "title": "Genre",
                        "description": "Genre of the book",
                        "example": "Science fiction"
                    },
                    "publication_date": {
                        "title": "Publication date",
                        "description": "Publication date of the book",
                        "type": "string",
                        "format": "date",
                        "example": "2024-04-20"
                    },
                    "words_number": {
                        "title": "Words number",
                        "description": "Number of words in the book",
                        "type": "integer",
                        "format": "int32",
                        "example": 100000
                    },
                    "price": {
                        "title": "Price",
                        "description": "Price of the book",
                        "type": "number",
                        "format": "float",
                        "example": 9.99
                    }
                },
                "type": "object"
            },
            "BookCollection": {
                "title": "BookCollection",
                "description": "Book collection",
                "properties": {
                    "data": {
                        "title": "Data",
                        "description": "Data wrapper",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/BookResource"
                        }
                    },
                    "links": {
                        "$ref": "#/components/schemas/Links"
                    },
                    "meta": {
                        "$ref": "#/components/schemas/Meta"
                    }
                },
                "type": "object"
            },
            "BookResource": {
                "title": "BookResource",
                "description": "Book resource",
                "properties": {
                    "id": {
                        "title": "ID",
                        "description": "Book ID",
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "title": {
                        "title": "Title",
                        "description": "Title of the book",
                        "type": "string",
                        "example": "Laborum voluptatem officiis est et"
                    },
                    "publisher": {
                        "title": "Publisher",
                        "description": "Publisher of the book",
                        "type": "string",
                        "example": "Zieme, Hauck and McClure"
                    },
                    "author": {
                        "title": "Author",
                        "description": "Author of the book",
                        "type": "string",
                        "example": "Allen Brown"
                    },
                    "genre": {
                        "title": "Genre",
                        "description": "Genre of the book",
                        "type": "string",
                        "example": "Science fiction"
                    },
                    "publication_date": {
                        "title": "Publication date",
                        "description": "Publication date of the book",
                        "type": "string",
                        "example": "2024-04-20"
                    },
                    "words_number": {
                        "title": "Words number",
                        "description": "Number of words in the book",
                        "type": "integer",
                        "format": "int32",
                        "example": 100000
                    },
                    "price": {
                        "title": "Price",
                        "description": "Price of the book",
                        "type": "string",
                        "example": "$9.99"
                    }
                },
                "type": "object"
            },
            "Links": {
                "title": "Links",
                "description": "Listing links data",
                "properties": {
                    "first": {
                        "title": "First link",
                        "description": "Link to the first page of listing",
                        "type": "string",
                        "example": "http://localhost/api/books?page=1"
                    },
                    "last": {
                        "title": "Last link",
                        "description": "Link to the last page of listing",
                        "type": "string",
                        "example": "http://localhost/api/books?page=5"
                    },
                    "prev": {
                        "title": "Prev link",
                        "description": "Link to the previous page of listing",
                        "type": "string",
                        "example": "http://localhost/api/books?page=1",
                        "nullable": true
                    },
                    "next": {
                        "title": "Prev link",
                        "description": "Link to the next page of listing",
                        "type": "string",
                        "example": "http://localhost/api/books?page=2",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "Meta": {
                "title": "Meta",
                "description": "Listing meta data",
                "properties": {
                    "current_page": {
                        "title": "Current page",
                        "description": "Number of the current page of listing",
                        "type": "integer",
                        "example": 1
                    },
                    "from": {
                        "title": "From",
                        "description": "Number of the first record on the page out of the total number of records",
                        "type": "integer",
                        "example": 1
                    },
                    "last_page": {
                        "title": "Last page",
                        "description": "Number of the last page in listing",
                        "type": "integer",
                        "example": 5
                    },
                    "path": {
                        "title": "Path",
                        "description": "Base path to the current listing",
                        "type": "string",
                        "example": "http://localhost/api/books"
                    },
                    "per_page": {
                        "title": "Per page",
                        "description": "Number of records to display on page in listing",
                        "type": "integer",
                        "example": 20
                    },
                    "to": {
                        "title": "To",
                        "description": "Number of the last record on the page out of the total number of records",
                        "type": "integer",
                        "example": 20
                    },
                    "total": {
                        "title": "Total",
                        "description": "Total number of the records in listing",
                        "type": "integer",
                        "example": 100
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Books",
            "description": "API Endpoints of Books"
        }
    ]
}